@model Project.Models.Permissions
@{
    ViewBag.Title = "Insert";
}

<h2>新增權限</h2>
<form method="post" action="~/Permissions/Insert" class="form-horizontal">
    <div class="form-group">
        <label class="col-sm-2 control-label">權限編號</label>
        <div class="col-sm-2">
            <input type="text" class="form-control" name="PermissionsID" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">權限名稱</label>
        <div class="col-sm-2">
            <input type="text" class="form-control" name="PermissionsName" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">新增</button>
        </div>
    </div>
</form>
