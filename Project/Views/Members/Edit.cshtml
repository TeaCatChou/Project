@model Project.Models.Members
@{
    ViewBag.Title = "Edit";
}


<h2>修改密碼</h2>
<form method="post" action="~/Members/Edit" class="form-horizontal">

    <div class="form-group">
        <label class="col-md-2 control-label">密碼</label>
        <div class="col-md-2">
            <input type="hidden" name="MemberGUID" value="@Model.MemberGUID" />
            <input type="text" class="form-control" name="Password" value="@Model.Password" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">修改</button>
        </div>
    </div>
</form>

