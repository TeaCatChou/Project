@model Project.Models.JobTitle
@{
    ViewBag.Title = "Edit";
}

<h2>JobTitle_Edit</h2>
<form method="post" action="~/JobTitle/Edit" class="form-horizontal">

    <div class="form-group">
        <label class="col-md-2 control-label">TitleID</label>
        <div class="col-md-2">
            <input type="hidden" name="TitleGUID" value="@Model.TitleGUID" />
            <input type="text" class="form-control" name="TitleID" value="@Model.TitleID" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">TitleName</label>
        <div class="col-md-2">
            <input type="text" class="form-control" name="TitleName" value="@Model.TitleName" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">Edit</button>
        </div>
    </div>
</form>

